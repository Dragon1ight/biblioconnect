{% extends 'base.html.twig' %}

{% block title %}Réserver {{ book.title }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h4 mb-0">Réserver un livre</h1>
                    </div>
                    <div class="card-body">
                        <!-- Informations du livre -->
                        <div class="mb-4">
                            <h2 class="h5">{{ book.title }}</h2>
                            <p class="text-muted">par {{ book.author }}</p>
                            <p>
                                <strong>Stock disponible :</strong>
                                <span class="badge {% if book.quantity <= 5 %}bg-warning{% else %}bg-success{% endif %}">
                                    {{ book.quantity }}
                                </span>
                            </p>
                        </div>

                        <!-- Formulaire de réservation -->
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.book) }}
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                La réservation sera active jusqu'à ce que vous la marquiez comme terminée ou qu'elle soit annulée.
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check"></i> Confirmer la réservation
                                </button>
                                <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Annuler
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 