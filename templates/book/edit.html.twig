{% extends 'base.html.twig' %}

{% block title %}Modifier {{ book.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1>Modifier {{ book.title }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.author, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.author, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.theme, 'theme', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.theme, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                                {{ form_errors(form.theme, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                          

                            <div class="mb-3">
                                {{ form_label(form.language, 'Langue', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.language, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.quantity, 'Quantité disponible', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.quantity, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.category, {'attr': {'class': 'text-danger'}}) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-secondary">Retour</a>
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 