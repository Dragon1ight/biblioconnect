{% extends 'base.html.twig' %}

{% block title %}
    {% if edit_mode %}
        Modifier le livre - {{ parent() }}
    {% else %}
        Nouveau livre - {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">
            {% if edit_mode %}
                Modifier le livre
            {% else %}
                Nouveau livre
            {% endif %}
        </h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.author) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.theme) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.language) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.quantity) }}
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('app_book_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 